<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#323232"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/etNomeSerie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome da Série"
        android:textColor="#FFFCFC"
        android:textColorHighlight="#ACABAB"
        android:textColorHint="#AAAAAA"
        android:textColorLink="#9F9F9F" />

    <EditText
        android:id="@+id/etEpisodio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Episódio"
        android:inputType="number"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#A8A8A8"
        android:textColorHint="#AFAFAF"
        android:textColorLink="#A3A3A3" />

    <Spinner
        android:id="@+id/spinnerCategoria"
        style="@android:style/Widget.Material.Light.Spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/material_dynamic_neutral80"
        android:dropDownSelector="@color/white"
        android:entries="@array/categorias"
        android:scrollbarThumbHorizontal="@color/white"
        android:scrollbarThumbVertical="@color/white" />

</LinearLayout>
